<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/checklist_list_row_height"
    android:id="@+id/rowLayout"
    android:orientation="horizontal"
    android:gravity="bottom">

    <ImageView
        android:layout_height="24dp"
        android:id="@+id/handle"
        android:src="@drawable/ic_reorder_black_24dp"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checklistText"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemEdit"
        android:hint="@string/default_item_hint"
        android:textSize="15dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:inputType="textCapSentences" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle_icon"
        android:background="@drawable/circle_icon"
        android:textColor="@color/gray1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/circle_icon_text_size"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/delete"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

</LinearLayout>